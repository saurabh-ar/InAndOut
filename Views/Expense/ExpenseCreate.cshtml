@model InAndOut.Models.VM_Expense;
@{
    ViewData["Title"] = "ExpenseCreate";
}

<h1>Expense Create</h1>

<div class="container p-3 col-8">

    <form method="post" asp-action="ExpenseCreate">
        @*/asp-validation-summary="ModelOnly" will not display Model Errors, just the errorwhat comes from Controller" *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Expense.ExpenseName"></label>
            <input  asp-for="Expense.ExpenseName" placeholder="Enter Text" class="form-control" />
            <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Expense.Amount"></label>
            <input asp-for="Expense.Amount" placeholder="Enter Text" class="form-control" />
            <span asp-validation-for="Expense.Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Expense.ExpenseCategoryId"></label>
            <select asp-for="Expense.ExpenseCategoryId" asp-items="@Model.TypeDropDown" class="form-control">
                <option selected>--Select an Expense Category--</option>
            </select>
            <span asp-validation-for="Expense.ExpenseCategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Expense</button>
             <button asp-action="ExpenseHome" asp-controller="Expense" class="btn btn-danger">Back</button>
        </div>

    </form>
</div>

@*Client side Validation using _ValidationScriptsPartial which comes by default*@
@section Scripts{
    @{<partial name = "_ValidationScriptsPartial"/>}
}