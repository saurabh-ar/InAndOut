@model InAndOut.Models.VM_Expense;
@{
    ViewData["Title"] = "Expense Update";
}

<h1>Expense Update</h1>

<div class="container p-3 col-8">

    <form method="post" asp-action="ExpenseUpdatePost">
        <input asp-for="Expense.Id" hidden />
        @*/asp-validation-summary="ModelOnly" will not display Model Errors, just the errorwhat comes from Controller" *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Expense.ExpenseName"></label>
            <input asp-for="Expense.ExpenseName" class="form-control" />
            
        </div>
        <div class="form-group">
            <label asp-for="Expense.Amount"></label>
            <input asp-for="Expense.Amount" class="form-control" />
            
        </div>
        <div class="form-group">
            <label asp-for="Expense.ExpenseCategoryId"></label>
            <select asp-for="Expense.ExpenseCategoryId" asp-items="@Model.TypeDropDown" class="form-control">
                <option selected>--Select Expense Category--</option>
            </select>
            
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Update Expense</button>
             <button asp-action="ExpenseHome" asp-controller="Expense" class="btn btn-info">Back</button>
        </div>

    </form>
</div>

@*Client side Validation using _ValidationScriptsPartial which comes by default*@
@section Scripts{
    @{<partial name = "_ValidationScriptsPartial"/>}
}